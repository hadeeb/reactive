{
  "name": "@hadeeb/reactive",
  "description": "Reactive global state for react apps",
  "version": "0.0.2",
  "license": "MIT",
  "src": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "microbundle build --raw -f es,cjs",
    "size": "size-limit",
    "test": "nyc ava --verbose",
    "lint": "eslint src tests --fix --ext .ts,.tsx"
  },
  "author": {
    "email": "hadeebfarhan1@gmail.com",
    "name": "Hadeeb Farhan",
    "url": "https://hadeeb.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hadeeb/reactive"
  },
  "bugs": {
    "url": "https://github.com/hadeeb/reactive/issues"
  },
  "keywords": [
    "reactive",
    "react",
    "state",
    "store"
  ],
  "peerDependencies": {
    "react": ">=16.8",
    "tiny-invariant": "*"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^2.2.1",
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jsdom": "^12.2.4",
    "@types/react": "^16.9.13",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "ava": "^2.4.0",
    "babel-eslint": "10.x",
    "babel-plugin-dev-expression": "^0.2.2",
    "eslint": "6.x",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "2.x",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "jsdom": "^15.2.1",
    "microbundle": "0.12.0-next.6",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "react": "^16.11.0",
    "react-dom": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "tiny-invariant": "^1.0.6",
    "ts-node": "^8.5.4"
  },
  "dependencies": {
    "type-fest": "^0.8.1"
  },
  "mangle": {
    "regex": "^_"
  },
  "size-limit": [
    {
      "name": "core",
      "path": "dist/index.js",
      "limit": "1100 B",
      "ignore": [
        "react"
      ]
    }
  ],
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts",
      "tsx"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html",
      "text"
    ]
  }
}
